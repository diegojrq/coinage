<!DOCTYPE html>
<html>
<head>
  <title>Coinage</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="top-bar">
		<% if user_signed_in? %>		
			<span>@i Hi, <strong><%= link_to current_user.email, edit_user_registration_path %></strong>!</span>
			<%= link_to "@i logout", destroy_user_session_path, method: :delete %>
		<% else %>
			<%= link_to "@i sign up", new_user_registration_path %> |
			<%= link_to "@i login", new_user_session_path %>
		<% end %>
	</div>
	<div class="notice">
		<% if notice %>  
			<p class="alert alert-success"><%= notice %></p>
		<% end %>
		<% if alert %>
			<p class="alert alert-danger"><%= alert %></p>
		<% end %>
	</div>
	<div class="top-nav">
		<% if user_signed_in? %>
			<%= link_to '@i Accounts', accounts_path %>
			<%= link_to '@i Categories', categories_path %>
		<% end %>
	</div>
	<%= yield %>
</body>
</html>
